@model ElectronicCourses.Models.Course

@{
    ViewData["Title"] = "Edytuj kurs";
}

<div class="container mt-4 bg-dark text-light p-4 rounded">
    <h2 class="mb-4">Edytuj kurs</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CoverImagePath" />
        <!-- tytuł -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- opis -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control bg-dark text-light border-secondary" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- czas trwania -->
        <div class="mb-3">
            <label asp-for="Hours" class="form-label"></label>
            <input asp-for="Hours" class="form-control bg-dark text-light border-secondary" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
        <!-- okładka -->
        <div class="mb-3">
            <label class="form-label fw-bold">Okładka kursu</label>
            <input type="file" name="CoverImage" class="form-control bg-dark text-light border-secondary" />
            @if (!string.IsNullOrEmpty(Model.CoverImagePath))
            {
                <div class="mt-2">
                    <img src="@Model.CoverImagePath" alt="Okładka kursu" style="max-height:150px;" />
                </div>
            }
        </div>


        <!-- przycisk zapisu -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-orange">Zapisz zmiany</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
